{
    "$schema": "https://opencode.ai/config.json",
    "experimental": {
        "mcp_timeout": 120000
    },
    "provider": {
        "zhipuai-coding-plan": {
            "options": {
                "apiKey": "{env:Z_AI_API_KEY}"
            }
        }
    },
    "theme": "tokyonight",
    "model": "zhipuai-coding-plan/glm-4.7",
    "small_model": "zhipuai-coding-plan/glm-4.5-air",
    "default_agent": "build",
    "mcp": {
        "zai-mcp-server": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@z_ai/mcp-server"
            ],
            "environment": {
                "Z_AI_MODE": "ZHIPU",
                "Z_AI_API_KEY": "{env:Z_AI_API_KEY}"
            },
            "enabled": false,
        },
        "web-search-prime": {
            "type": "remote",
            "url": "https://open.bigmodel.cn/api/mcp/web_search_prime/mcp",
            "headers": {
                "Authorization": "Bearer {env:Z_AI_API_KEY}"
            },
            "enabled": false,
        },
        "web-reader": {
            "type": "remote",
            "url": "https://open.bigmodel.cn/api/mcp/web_reader/mcp",
            "headers": {
                "Authorization": "Bearer {env:Z_AI_API_KEY}"
            },
            "enabled": true,
        },
        "zread": {
            "type": "remote",
            "url": "https://open.bigmodel.cn/api/mcp/zread/mcp",
            "headers": {
                "Authorization": "Bearer {env:Z_AI_API_KEY}"
            },
            "enabled": false,
        },
        "playwright": {
            "type": "local",
            "command": [
                "npx",
                "@playwright/mcp@latest"
            ],
            "enabled": false,
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "{env:CONTEXT7_API_KEY}"
            ],
            "enabled": true,
        },
        "chrome-devtools": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest",
                "--no-usage-statistics",
                "--headless", "true"
            ],
            "enabled": false
        },
        "grep": {
            "type": "remote",
            "url": "https://mcp.grep.app",
            "enabled": true,
        }
    },
    "permission": {
        "external_directory": {
            "*": "ask",
            "~/.config/opencode/skills/*": "allow",
            "/tmp/*": "allow",
        }
    },
    "formatter": {
        "stylua": {
            "command": ["stylua", "-", "$FILE"],
            "extensions": [".lua"]
        }
    },
    "plugin": [
        "@franlol/opencode-md-table-formatter@0.0.3",
        "opencode-pty@0.2.1",
        "@mohak34/opencode-notifier@0.1.19"
    ]
}
